<Window x:Class="Multiscreen_Progressbar.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Popup" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Please Wait..." FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <ProgressBar Name="prgTest" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" IsIndeterminate="True"/>
    </StackPanel>
</Window>
